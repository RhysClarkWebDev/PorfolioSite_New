{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "ES6",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "moduleResolution": "node"
  },

  "include": [
    "server.ts",
    "Controllers",
    "Models",
    "Routes",
    ".eslintrc.cjs",
  ],

  "exclude": [
    "node_modules",
    "dist",
  ]

}
